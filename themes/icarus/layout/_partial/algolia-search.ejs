<link rel="stylesheet" href="https://cdn.jsdelivr.net/docsearch.js/2/docsearch.min.css" />
<script type="text/javascript" src="https://cdn.jsdelivr.net/docsearch.js/2/docsearch.min.js"></script>
<!-- https://www.algolia.com/doc/api-client/javascript#init-index -->
<script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearchLite.min.js"></script>
<script type="text/javascript">
  // inputSelector: ''
var algoliaSearchIndex = algoliasearch(
  '1DJDVE2IL4', // appId
  'c784a416f2e153ae75b1288ed8c3b0d8' // apiKey
).initIndex('BLOG'); // indexName

// DO the search
$('.search-form-input').on('keyup', function(e) {
  var $el = $(e.currentTarget);
  algoliaSearchIndex.search($el.val(), function (err, content) {
    // console.log(err, content);
    console.log(content.hits.map(hit => hit.title));
  });
});
</script>
